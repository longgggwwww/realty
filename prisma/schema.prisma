// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  profile  Profile?
  disabled Boolean  @default(false)

  accounts Account[]

  // Vai trò người dùng
  role   Role?   @relation(fields: [roleId], references: [id])
  roleId String? @db.ObjectId

  // Các quyền đặc biệt
  extendPermission    Permission[] @relation(fields: [extendPermissionIds], references: [id])
  extendPermissionIds String[]     @db.ObjectId

  // Bài viết đã tạo
  posts Post[] @relation("UserCreatePost")

  // Bài viết đã lưu
  savedPosts Post[] @relation("UserSavePost")

  // Các loại tài khoản đã liên kết
  providers String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  author   User   @relation(name: "UserCreatePost", fields: [authorId], references: [id])
  authorId String @db.ObjectId

  savedBy   User?   @relation(name: "UserSavePost", fields: [savedById], references: [id])
  savedById String? @db.ObjectId

  title       String
  type        Boolean
  description String
  price       BigInt
  address     Address

  // Loại hình bất động sản
  estateType EstateType @relation(fields: [categoryId], references: [id])
  categoryId String     @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("posts")
}

model Setting {
  id String @id @map("_id") @db.ObjectId
}

type Profile {
  name          String?
  dob           DateTime?
  gender        Boolean?
  phone         String?
  email         String?
  emailVerified Boolean?
  about         String?
  address       Address?
  avatar        String?
  background    String?
}

type Address {
  provide  String
  district String
  ward     String
}

model Account {
  uid    String @id @map("_id")
  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId

  @@map("accounts")
}

model Role {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  level Int

  user User[]

  permissions   Permission[] @relation(fields: [permissionIds], references: [id])
  permissionIds String[]     @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("roles")
}

// Phân loại quyền hạn
model PermissionGroup {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  permissions Permission[]

  @@map("permission-groups")
}

model Permission {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  code        String  @unique
  description String?

  // Thuộc group nào
  group   PermissionGroup @relation(fields: [groupId], references: [id])
  groupId String          @db.ObjectId

  roles   Role[]   @relation(fields: [roleIds], references: [id])
  roleIds String[] @db.ObjectId

  users   User[]   @relation(fields: [userIds], references: [id])
  userIds String[] @db.ObjectId

  @@map("permissions")
}

// Loại hình của bất động sản
model EstateType {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  label String
  icon  String

  // Bài viết thuộc loại hình bất động sản này
  posts          Post[]
  EstateProperty EstateProperty[]

  @@map("estate-types")
}

// Tiện ích của bất động sản
model EstateUtility {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  label String
  icon  String

  @@map("estate-utilities")
}

// Thuộc tính của bất động sản
model EstateProperty {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  key   String @unique
  title String
  icon  String

  // Thuộc loại bds nào
  owner   EstateType @relation(fields: [ownerId], references: [id])
  ownerId String     @db.ObjectId

  options      String[]
  isFilterItem Boolean
  dataType     String
  unit         String?

  @@map("estate-properties")
}

enum EstatePropertyType {
  MONEY
  TEXT
  NUMBER
  SELECT
  RADIO
  CHECKBOX
  AREA
  SIZE
  BOOL
}
